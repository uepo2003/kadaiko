<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h2>User info</h2>

  <%= form_with(model:@user,local: true,class: :edit_book,id: :edit_book) do |f|%>
    <% if @user && @user.errors.any? %>
      <div id="error_explanation">
        <h3><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h3>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>



    <div class="form-group">
      <%= f.label :name, "Name"%>
      <%= f.text_field :name, id: :user_name, class:"form-control name" %>
    </div>

    <div class="form-group">
      <%= f.label :image, "Image"%>
      <!--デベロッパーツール↓-->
      <!--<input class="form-control-file user_image" accept="image/*" type="file" name="user[profile_image]" id="user_profile_image">-->
      <!--今回やる記述↓-->
      <%= f.file_field :profile_image, class:"form-control-file user_image" %>
    </div>

    <div class="form-group">
      <%= f.label :introduction, "Introduction"%>
      <%= f.text_area :introduction, id: :user_introduction, class:"form-control introduction" %>
    </div>

    <div class="form-group">
      <%= f.submit 'Update User', class:"btn btn-secondary"%>
    </div>
  <% end %>
</div>

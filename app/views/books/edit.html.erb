<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h1>Editing Book</h1>

  <%= form_with(model:@book,local: true,class: :edit_book,id: :edit_book) do |f|%>
  
  
    <% if @book && @book.errors.any? %>
      <div id="error_explanation">
        <h3><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    

    <div class="form-group">
      <%= f.label :title,"Title"%>
      <%= f.text_field :title, id: :book_title, class:"form-control book_title" %>
    </div>

    <div class="form-group">
      <%= f.label :body,"Opinion"%>
      <%= f.text_area :body, id: :book_body, class:"form-control book_body" %>
    </div>

    <div class="form-group">
      <%= f.submit 'Update Book', class:"btn btn-success"%>
    </div>
  <% end %>
  
  <%= link_to "Show", book_path(@book) %> |
  <%= link_to "Back", books_path %>
</div>